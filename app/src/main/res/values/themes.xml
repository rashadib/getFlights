<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectFlights" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#161e36</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">#161e36</item>

        <!-- Customize your theme here. -->
    </style>




    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Customize text color -->
        <item name="android:textColor">@color/white</item> <!-- Change to your desired text color -->
        <item name="android:editTextColor">@color/white</item> <!-- Change to your desired text color -->
        <item name="android:textColorHint">@color/white</item> <!-- Change to your desired text color -->
        <item name="android:queryBackground">@color/white</item>
    </style>
</resources>